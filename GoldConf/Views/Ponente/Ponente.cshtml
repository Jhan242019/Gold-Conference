@{ var ponentes = (List<Ponente>)Model; }


<body class="index">

    <div class="barra">
        <div class="contenedor clearfix">
            <div class="logo">
                <a href="/Home">
                    <img src="/img/LOGO.png" alt="logo">
                </a>
            </div>

            <div class="menu-movil">
                <span></span>
                <span></span>
                <span></span>
            </div>

            <nav class="navegacion-principal clearfix">
                <a href="/conferencia/Pasadas">Mis Conferencias</a>
                <a href="/conferencia/Futuras">Calendario</a>
                <a href="#">Invitados</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="/Auth/Login">Login</a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Auth/Logout">LogOut</a>
                    <a href="/#">@User.Claims.FirstOrDefault().Value</a>
                }
            </nav>
        </div>
        <!--.contenedor-->
    </div>
    <!--.barra-->
    <!--.Contenido-->

    <form class="form-inline">
        <div class="form-group mb-2">
            <input class="form-control" style="background-color:transparent; " type="search" placeholder="Buscar" name="search" value="@ViewBag.Buscar">
        </div>
        <button class="form-control btn btn-outline-dark btn-sm" type="button">Buscar</button>
    </form>

    <section class="invitados contenedor seccion">
        @if (ViewBag.Usuario != "LanRhXXX")
        {
            <a href="/ponente/registrar" class="button hollow"> Registrar Ponente</a>
        }
        <h2>Nuestros conferencistas</h2>
        <ul class="lista-invitados clearfix">
            @foreach (var item in ponentes)
            {
                <li>
                    <div class="invitado">
                        <a class="invitado-info" href="/Ponente/detalle?idPonente=@item.Id">
                            <img src="@item.Imagen" alt="Imagen invitado">
                            <p>@item.NomApe</p>
                        </a>
                    </div>
                    <!-- END .invitado -->
                </li>
            }
        </ul>
        <!-- END lista-invitados -->
    </section>
    <!-- END .invitados -->

</body>

