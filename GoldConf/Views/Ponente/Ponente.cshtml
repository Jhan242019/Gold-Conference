@{ var ponentes = (List<Ponente>)Model; }

<head>
    <!-- Los iconos tipo Solid de Fontawesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
    <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>

    <!-- Nuestro css-->
    <link rel="stylesheet" type="text/css" href="/css/Login.css">
    <link href="/css/Nosotros.css" rel="stylesheet" />
    <link href="/css/normalize.css" rel="stylesheet" />
    <link href="/css/Detalle.css" rel="stylesheet" />
</head>

<body class="index">

    <div class="barra">
        <div class="contenedor clearfix">
            <div class="logo">
                <a href="/Home">
                    <img src="/img/LOGO.png" alt="logo">
                </a>
            </div>

            <div class="menu-movil">
                <span></span>
                <span></span>
                <span></span>
            </div>

            <nav class="navegacion-principal clearfix">
                <a href="/conferencia/Pasadas">Mis Conferencias</a>
                <a href="/conferencia/Futuras">Calendario</a>
                <a href="#">Invitados</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="/Auth/Login">Login</a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Auth/Logout">LogOut</a>
                    <a href="/#">@User.Claims.FirstOrDefault().Value</a>
                }
            </nav>
        </div>
        <!--.contenedor-->
    </div>
    <!--.barra-->
    <!--.Contenido-->

    <div class="contenedor">
        <div class="form-group mb-2">
            <input style="background-size:cover; " type="search" placeholder="Buscar" name="search" value="@ViewBag.Buscar">
            <button class="button jhan" type="submit">Buscar</button>
        </div>
    </div>

    <section class="invitados contenedor seccion">
        @if (ViewBag.Usuario != "LanRhXXX")
        {
            <a href="/ponente/registrar" class="button hollow"> Registrar Ponente</a>
        }
        <h2>Nuestros conferencistas</h2>
        <ul class="lista-invitados clearfix">
            @foreach (var item in ponentes)
            {
                <li>
                    <div class="invitado">
                        <a class="invitado-info" href="/Ponente/detalle?idPonente=@item.Id">
                            <img src="@item.Imagen" alt="Imagen invitado">
                            <p>@item.NomApe</p>
                        </a>
                    </div>
                    <!-- END .invitado -->
                </li>
            }
        </ul>
        <!-- END lista-invitados -->
    </section>
    <!-- END .invitados -->

</body>

