@{ var conferencias = (List<Conferencia>)Model; }

<body class="index">

    <div class="barra">
        <div class="contenedor clearfix">
            <div class="logo">
                <a href="/Home">
                    <img src="/img/LOGO.png" alt="logo">
                </a>
            </div>

            <div class="menu-movil">
                <span></span>
                <span></span>
                <span></span>
            </div>

            <nav class="navegacion-principal clearfix">
                <a href="/conferencia/Pasadas">Mis Conferencias</a>
                <a href="/conferencia/Futuras">Calendario</a>
                <a href="#">Invitados</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="/Auth/Login">Login</a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Auth/Logout">LogOut</a>
                    <a href="/#">@User.Claims.FirstOrDefault().Value</a>
                }
            </nav>
        </div>
        <!--.contenedor-->
    </div>
    <!--.barra-->
    <!--.Contenido-->


    <section class="invitados contenedor seccion">

        @foreach (var item in conferencias)
        {
            @if (ViewBag.Usuario != "LanRhXXX")
            {
                <a href="/conferencia/Edit?id=@item.Id" class="button hollow"> Editar Conferencia</a>
            }
            <div class="invitado-info" id="@item.Id">
                <h2>@item.TituloConf</h2>
                <img src="@item.ImagePath" alt="" width="240" height="135">
                <h3>Instructor</h3>
                <p><i class="fa fa-user" aria-hidden="true"></i>@item.Ponentes.NomApe</p>

                <h3>Fecha</h3>
                <p><i class="fa fa-calendar" aria-hidden="true"></i>@item.FechaConf</p>
                <p>@item.DetalleConf</p>

                @if (ViewBag.Usuario != "LanRhXXX")
                {
                    <h3>Numero de compras</h3>
                    <p>@ViewBag.Compra</p>
                }

            </div>
            <!-- END .invitado -->
        }
        <!-- END lista-invitados -->
    </section>
    <!-- END .invitados -->

</body>

