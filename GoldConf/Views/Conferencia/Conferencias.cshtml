<body class="index">

    <div class="barra">
        <div class="contenedor clearfix">
            <div class="logo">
                <a href="/Home">
                    <img src="/img/LOGO.png" alt="logo">
                </a>
            </div>

            <div class="menu-movil">
                <span></span>
                <span></span>
                <span></span>
            </div>

            <nav class="navegacion-principal clearfix">
                <a href="/conferencia/CompraConf">Mis Conferencias</a>
                <a href="#">Calendario</a>
                <a href="#">Invitados</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="/Auth/Login">Login</a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Auth/Logout">LogOut</a>
                    <a href="/#">@User.Claims.FirstOrDefault().Value</a>
                }
            </nav>
        </div>
        <!--.contenedor-->
    </div>
    <!--.barra-->
    <!--.Contenido-->

    <form class="form-inline">
        <div class="form-group mb-2">
            <input class="form-control" style="background-color:transparent; " type="search" placeholder="Buscar" name="search" value="@ViewBag.Buscar">
        </div>
        <button class="form-control btn btn-outline-dark btn-sm" type="button">Buscar</button>
    </form>

    @if (ViewBag.Usuario != "LanRhXXX")
    {
        <a href="/conferencia/create" class="btn btn-outline-dark">Programar Conferencia</a>
        <bir />
    }

    <section class="precios seccion">
        <h2>Conferencias</h2>
        <div class="contenedor">
            <ul class="lista-precios clearfix">
                @foreach (var item in conferencias)
                {
                    @if (item.FechaConf >= DateTime.Now)
                    {
                        <li>
                            <div class="tabla-precio">
                                <h3>@item.TituloConf</h3>

                                <a class="course-card--image-wrapper--Sxd90" href="#/@item.Id">
                                    <img alt="" width="240" height="135" src="@item.ImagePath" srcset="@item.ImagePath 1x, @item.ImagePath 2x">
                                </a>

                                @*<div class="course-card--image-wrapper--Sxd90"> <img alt="" width="240" height="135" src="@item.ImagePath" srcset="@item.ImagePath 1x, @item.ImagePath 2x"> </div>*@
                                <div> __________________________</div>
                                <ul>
                                    <li><i class="fa fa-user" aria-hidden="true"></i> @item.Ponentes.NomApe</li>
                                    <li><i class="fa fa-calendar" aria-hidden="true"></i> @item.FechaConf</li>
                                    @*<li>@item.DetalleConf</li>*@
                                </ul>
                                <a href="/conferencia/comprar?idF=@item.Id" class="button hollow">@string.Format("{0:N2}", item.PrecioConf) S/.</a>
                            </div>
                        </li>
                    }
                }
            </ul>
        </div>
    </section>
</body>